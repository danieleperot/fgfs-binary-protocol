<?xml version="1.0"?>

<PropertyList>
    <generic>
        <input>
            <binary_mode>true</binary_mode>
            <!-- I set byte_order to host because the struct -->
            <!-- is sent with a Little Endian encoding -->
            <byte_order>host</byte_order>

            <chunk>
                <name>Magnetos</name>
                <type>int</type>
                <node>/controls/switches/magnetos</node>
            </chunk>

            <!-- I needed to create this empty 4 byte chunck to adjust for the struct padding. -->
            <!-- https://stackoverflow.com/questions/119123/why-isnt-sizeof-for-a-struct-equal-to-the-sum-of-sizeof-of-each-member -->
            <chunk>
                <name>This is a byte space</name>
                <type>int</type>
                <node>/abc</node>
            </chunk>

            <chunk>
                <name>Mixture</name>
                <type>double</type>
                <node>/controls/engines/current-engine/mixture</node>
            </chunk>

            <chunk>
                <name>Throttle</name>
                <type>double</type>
                <node>/controls/engines/current-engine/throttle</node>
            </chunk>

            <chunk>
                <name>Aileron</name>
                <type>double</type>
                <node>/controls/flight/aileron</node>
            </chunk>

            <chunk>
                <name>Elevator</name>
                <type>double</type>
                <node>/controls/flight/elevator</node>
            </chunk>

            <chunk>
                <name>Rudder</name>
                <type>double</type>
                <node>/controls/flight/rudder</node>
            </chunk>
        </input>
    </generic>
</PropertyList>
